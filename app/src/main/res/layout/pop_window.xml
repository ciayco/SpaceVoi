<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:id="@+id/poplayout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calBut"
        android:layout_gravity="right"
        android:background="@drawable/play_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/progressBar"
        android:progress="50"
        android:indeterminate="false"
        android:layout_below="@+id/calBut"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/kayitText"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="anananan"
        android:textSize="20sp"
        android:layout_above="@+id/progressBar"
        android:layout_alignLeft="@+id/isimdBut"
        android:layout_alignStart="@+id/isimdBut" />

    <TextView
        android:id="@+id/sureText"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sil"
        android:id="@+id/silBut"
        android:layout_below="@+id/sureText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İsmi Değiştir"
        android:id="@+id/isimdBut"
        android:layout_alignTop="@+id/silBut"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönder"
        android:id="@+id/gonderBut"
        android:layout_alignBottom="@+id/isimdBut"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/isimdBut" />
</RelativeLayout>