<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/child_txt"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/like_button"
        android:layout_toStartOf="@+id/like_button" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/sesprogress"
        android:progress="0"
        android:indeterminate="false"
        android:layout_below="@+id/child_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:layout_gravity="right"
        android:background="@mipmap/playbutton"
        android:layout_alignBottom="@+id/sesprogress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
      />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like_button"
        android:background="@mipmap/likebutton"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/play_button"
        android:layout_toStartOf="@+id/play_button" />





</RelativeLayout>