<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ciayco.spacevoi.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/bg_gradient">
    <!--android:background="@mipmap/background#76093f74"!-->
    <!--android:background="@drawable/btn_selector_kaydet"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/topBar"
            android:layout_weight="0"
            android:visibility="invisible">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFieldHolder"
            android:layout_weight="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/etUsername"
                android:hint="Username / Email Adress"
                android:textColor="#ffffff"
                android:foreground="#20ffffff"
                android:textColorHint="#80ffffff"
                android:paddingLeft="20dp"
                android:text="gokhan" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/etPassword"
                android:hint="Password"
                android:textColor="#ffffff"
                android:foreground="#20f5f5f5"
                android:layout_marginTop="10dp"
                android:textColorHint="#80ffffff"
                android:textIsSelectable="false"
                android:paddingLeft="20dp"
                android:text="gokhan" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/checkBoxHolder"
            android:baselineAligned="false">

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Remember Me"
                android:id="@+id/cbRememberMe"
                android:textColor="#90ffffff"
                android:allowUndo="false"
                android:checked="false"
                android:enabled="false"
                android:buttonTint="#90ffffff"
                android:clickable="true"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginButtonHolder"
            android:longClickable="false"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="380dp"
                android:layout_height="70dp"
                android:id="@+id/ibLogin"
                android:background="#00ffffff"
                android:src="@mipmap/loginbuton"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:saveEnabled="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionsHolder"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Forgot your password?"
                android:id="@+id/labForgotpass"
                android:textColor="#ffc119"
                android:textSize="16dp"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <!--ffbb00!-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="--------  or  --------"
                android:id="@+id/textView3"
                android:textColor="#ffc119"
                android:textStyle="italic"
                android:textSize="16dp"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sign up now!"
                android:id="@+id/labSignup"
                android:textColor="#ffc119"
                android:onClick="registeractivty"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp"
            android:id="@+id/iconHolder"
            android:visibility="visible"
            android:background="#00ffffff"
            android:layout_marginTop="10dp">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/g_login_button"
                android:clickable="false"
                android:background="#00ffffff"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/g_login_button"
                android:background="#00ffffff"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
