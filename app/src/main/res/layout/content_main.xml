<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ciayco.spacevoi.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#282e33">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:id="@+id/kaydetbut"
        android:layout_above="@+id/calbut"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydı Çal"
        android:id="@+id/calbut"
        android:onClick="cal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/kaydetbut"
        android:layout_alignEnd="@+id/kaydetbut" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çalmayı Durdur"
        android:id="@+id/durbut"
        android:nestedScrollingEnabled="false"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Durdur"
        android:id="@+id/kaydurbut"
        android:onClick="durdur"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönder"
        android:id="@+id/button"
        android:onClick="upload"
        android:layout_alignTop="@+id/kaydetbut"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0a141e"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SpaceVoi"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textAlignment="center"
            android:visibility="visible"
            android:textSize="30dp"
            android:singleLine="false"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#fe9900" />

    </FrameLayout>



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/progressBar"
        android:max="100"
        android:indeterminate="false"
        android:progress="50"
        android:longClickable="false"
        android:clickable="true"
        android:layout_above="@+id/kaydetbut"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:id="@+id/exp_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:divider="#fe9900"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout" />


</RelativeLayout>
